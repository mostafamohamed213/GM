@model List<Cars.ViewModels.QuotationViewOrdersViewModel>
@{
    ViewData["Title"] = "Create Quotation";

}
<link rel="stylesheet" href="~/Template/css/dataTables.bootstrap4.css">
<!-- Date Range Picker CSS -->
<link rel="stylesheet" href="~/Template/css/daterangepicker.css">
@if (ViewBag.ErrorMessage != null)
{
    <div class="card">
        <h3 class="text-danger">@ViewBag.ErrorMessage</h3>
    </div>
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <h2 class="mb-2 page-title">Please Select Order</h2>
            <div class="row my-4">
                <!-- Small table -->
                <div class="col-md-12">
                    <div class="card shadow">
                        <div class="card-body">
                        
                            @if (Model is not null && Model.Count > 0)
                            {
                                <table class="table table-bordered table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>car</th>
                                            <th>Chases</th>
                                            <th>Total Price</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.order.UserBranch.Branch.Name : @item.order.OrderID</td>
                                                <td>@item.order.Vehicle.Name</td>
                                                <td>@item.order.Vehicle.Chases</td>
                                                <td>@item.TotalPrice</td>
                                                <td>
                                                    <a title="Select" asp-action="CreateQuotationViewOrderDetails" asp-route-orderID="@item.order.OrderID" asp-controller="Quotation" class="btn btn-success">Select</a>
                                                </td>
                                            </tr>
                                         }




                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <div>No order yet</div>
                                <a class="btn btn-success" asp-action="Index" asp-controller="Quotation">Back</a>

                            }


                        </div>
                    </div>
                </div> <!-- simple table -->
            </div> <!-- end section -->
        </div> <!-- .col-12 -->
    </div> <!-- .row -->
</div>


@section Scripts {
    <script src='~/Template/js/jquery.dataTables.min.js'></script>
    <script src='~/Template/js/dataTables.bootstrap4.min.js'></script>
   
    <script>
        ChangeColorSidebarItem("anavbarQuotation", "aAddQuotations");
       
    </script>

}