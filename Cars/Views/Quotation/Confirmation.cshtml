@model long
@{
    ViewData["Title"] = "Confirmation";
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <strong class="card-title">Confirmation</strong>
            </div>
            <div class="card-body">
                <form class="form" asp-action="Confirmation" asp-controller="Quotation" method="post">
                    <div>Customer confirmation </div>
                    <input type="hidden" asp-for="@Model" name="QuotationId" />
                    <button class="btn btn-primary" asp-action="Index" asp-controller="Quotation">Back</button>

                    <button type="submit" class="btn btn-success ">Confirmation</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        ChangeColorSidebarItem("anavbarQuotation", "aAddQuotations");

    </script>

}
