@model Cars.Models.OrderDetails
@{
    ViewData["Title"] = "Upload Files";
}
<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header">
                <strong class="card-title">Upload Rejected Order Line Files</strong>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-controller="Inventory" asp-action="UploadFiles">
                    <dl>
                        <dt>
                            <label>Upload</label>
                        </dt>
                        <dd>
                            <input type="file" name="FormFiles" id="FormFiles" multiple />
                            <input type="hidden" asp-for="InventoryID" />
                            <input type="hidden" asp-for="OrderDetailsID" />
                        </dd>
                    </dl>
                    <input class="btn btn-success" type="submit" value="Upload and continue" />
                </form>
            </div>
            <div class="col">
                <div class="col-1"></div>
                <div class="form-group ">
                    <a class="btn btn-primary" asp-action="Index" asp-controller="Inventory" onclick="return confirm('Are you sure, All the work will be lost?')">All Order Lines</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Inventory" asp-route-orderDetailsID="@Model.OrderDetailsID" onclick="return confirm('Are you sure, All the work will be lost?')">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        ChangeColorSidebarItem("anavbarInventory", "aInventory");
    </script>
}


