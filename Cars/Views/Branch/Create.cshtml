@model Cars.Models.BranchModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<h1>Create Branch</h1>

<h4>Branch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BranchIP" class="control-label"></label>
                <input asp-for="BranchIP" class="form-control" />
                <span asp-validation-for="BranchIP" class="text-danger"></span>
            </div>


            <div class="form-group">

                <label class="control-label">Employee</label>

                <select name="Employee" asp-items="ViewBag.Employee" multiple="multiple" class="form-control" id="multiSelectDropDownApprovers"></select>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mb-3" style="width:auto" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary mb-3" style="width:auto">Back to List</a>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.ErrorMessage");
        };
    </script>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
         

            $('#multiSelectDropDownApprovers').select2();

            ChangeColorSidebarItem("linkbranches", "abranches");
        });


    </script>
}